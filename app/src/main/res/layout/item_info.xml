<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_info_item"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        />
    <TextView
        android:id="@+id/tv_info_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_toRightOf="@id/iv_info_item"
        android:maxLines="2"
        android:text="@string/title"
        android:textColor="#000000"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_info_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:maxLines="2"
        android:text="@string/content"
        android:layout_below="@id/tv_info_item_title"
        android:layout_toRightOf="@id/iv_info_item"/>
    <TextView
        android:id="@+id/tv_info_item_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@id/iv_info_item"
        android:layout_alignBottom="@id/iv_info_item"
        android:text="@string/tag"/>
    <TextView
        android:id="@+id/tv_info_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignBottom="@id/iv_info_item"
        android:layout_alignParentRight="true"
        android:text="@string/time"/>

</RelativeLayout>